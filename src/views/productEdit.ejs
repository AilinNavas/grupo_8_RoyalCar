<%- include('partials/head' , { title: 'Editar producto' , styles: [ 'registro-login' ,'header' , 'footer' ]}) %>
    
<body>

  <%- include('partials/header') %>


    <!-- NUEVA VERSION DEL FORMULARIO -->
    <div class="signupFrm"  id="form-container">
      <br>
      <br>
      <br>
      <br>
      <br>
      <br>
