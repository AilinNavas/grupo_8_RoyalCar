<%- include('partials/head' , { title: 'Nuestros productos' , styles: [ 'compra' , 'header' , 'footer' ]}) %>

  <body>

    <%- include('partials/header') %>

      <main>
        <br>
        <section class="product-cart">
          <br>
          <br>
          <div class="motor-busqueda">

            <form action=" " class="formulario">
              <div class="caja1form">
                <div class="form">
                  <input class="input" placeholder="Marca" required="" type="text">
                  <span class="input-border"></span>
                </div>
              </div>
              <div class="caja2form">
                <div class="form">
                  <input class="input" placeholder="Modelo" required="" type="text">
                  <span class="input-border"></span>
                </div>
              </div>
              <div class="caja3form">
                <div class="form">
                  <input class="input" placeholder="Año" required="" type="text">
                  <span class="input-border"></span>
                </div>
              </div>
              <div class="button-search">
                <button>
                  Buscar
                </button>
              </div>
            </form>
          </div>


          <br>
          <h3>Nuestros Autos</h3>
          <br>
          <div class="products">

            <% products.forEach((product)=> { %>
              <article>
                <a href="/products/<%= product.id %>"><img src="\images\products\<%= product.image %>" alt="Auto"
                    class="product_img"></a>

                <div class="main-article">
                  <i class="fa-solid fa-car"></i></i>
                  <p class="price"> US$ <%= product.price %>
                  </p>
                  <h4 class="description">
                    <%= product.brand.name %>
                  </h4>
                  <p class="model">
                    <%= product.model %>
                  </p>

                  <br>
                  <button>
                    <span class="button_top"><a href="/products/<%= product.id %>">Ver detalle
                      </a></span>
                  </button>
                  <p class="status">Agregar al carrito</p>
                  <label class="switch">
                    <input type="checkbox">
                    <span class="slider"></span>

                  </label>

                </div>
              </article>
              <% }) %>
          </div>

          </div>
        </section>
        <br>

        <!-- <button>
          <span class="button_top"><a href="/products/productCart">¡Ir al Carrito!
            </a></span>
        </button> -->








      </main>
      <%- include('partials/footer') %>
  </body>
  

    </html>